// Math utilities module

fn abs(x) {
    if (x < 0) return -x;
    return x;
}

fn min(a, b) {
    if (a < b) return a;
    return b;
}

fn max(a, b) {
    if (a > b) return a;
    return b;
}

fn square(x) {
    return x * x;
}

fn cube(x) {
    return x * x * x;
}

fn power(x, y) {
    if (y == 0) return 1;
    let result = 1;
    for (let i = 0; i < y; i = i + 1) {
        result = result * x;
    }
    return result;
}
